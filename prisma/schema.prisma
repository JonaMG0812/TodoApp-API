generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "DATABASE_URL"
}

model tasks {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime
  status      Status
  userId      Int
  users       users    @relation(fields: [userId], references: [id])
}

model users {
  id       Int     @id @default(autoincrement())
  username String
  email    String
  password String
  tasks    tasks[]
}

enum Status {
  complete
  inProgress
  toDo
  timeOut
}
